{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "releaseNotes": "npm exec --no -- auto-changelog --stdout --unreleased-only --commit-limit false --hide-credit",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [],
    "after:bump": [],
    "after:release": []
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "‚ú® Features"
          },
          {
            "type": "fix",
            "section": "üêõ Bug Fixes"
          },
          {
            "type": "perf",
            "section": "‚ö° Performance"
          },
          {
            "type": "docs",
            "section": "üìö Documentation"
          },
          {
            "type": "refactor",
            "section": "‚ôªÔ∏è Refactoring"
          },
          {
            "type": "test",
            "section": "‚úÖ Tests"
          },
          {
            "type": "chore",
            "hidden": true
          },
          {
            "type": "style",
            "hidden": true
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "ignoreRecommendedBump": false
    }
  }
}
